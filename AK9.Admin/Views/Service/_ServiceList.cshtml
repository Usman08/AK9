@model List<AK9.AppHelper.Models.ServiceModel>
<table class="table table-striped table-bordered" id="tblService">
    <thead class="thead-dark">
        <tr>
            <th>Service Id</th>
            <th>Service Name</th>
            <th>Service Icon</th>
            <th>Banner Image</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Count > 0)
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.ServiceId</td>
                    <td>@item.ServiceName</td>
                    <td><span><i class="@item.ServiceIconName"></i></span></td>
                    <td>
                        <img id="blah" src="@( item.BannerImage!=null? Url.Content("~/service-banner/"+item.BannerImage) : Url.Content("~/images/no_image.gif"))" alt="@item.BannerImage" class="img-thumbnail" style="max-width:50px !important;" />
                    </td>
                    <td>
                        <a asp-controller="Service" asp-action="Update" asp-route-id="@item.ServiceId"><i class="fa fa-edit"></i></a>
                        <a href="javascript:void(0);" data-toggle="modal" data-target="#confirmationModel" data-delid="@item.ServiceId" data-targetdiv="divServiceList" data-delurl="Service/Delete" data-objectname="Service"><i class="fa fa-trash-alt"></i></a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5">No record found</td>
            </tr>
        }
    </tbody>
</table>
<script type="text/javascript">
    setDatatable();
</script>
