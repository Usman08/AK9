@model AK9.AppHelper.Models.SignInModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>SignIn - AK9 Admin</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/signin.css" />
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</head>
<body>
    <div class="sidenav">
        <div class="login-main-text">
            <img src="~/images/logo_b.png" style="max-width:200px;" />
            <h2>AK9 Admin<br></h2>
            <p>SignIn here to access AK9 Admin.</p>
        </div>
    </div>
    <div class="main">
        <div class="col-md-6 col-sm-12">
            <div class="login-form">
                @using (Html.BeginForm(FormMethod.Post, new { action = "SignIn", controller = "Account" }))
                {
                    <div class="form-group">
                        <label for="txtUsername">User Name</label>
                        @Html.TextBoxFor(m => m.Username, new { @class = "form-control", id = "txtUsername", placeholder = "Username" })
                        @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger small" })
                    </div>
                    <div class="form-group">
                        <label for="txtPassword">Password</label>
                        @Html.TextBoxFor(m => m.Password, new { @class = "form-control", id = "txtPassword", placeholder = "Password", type = "Password" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger small" })
                    </div>
                    <button type="submit" class="btn btn-success">SignIn</button>
                }
            </div>
        </div>
    </div>
</body>
</html>
