@model List<AK9.AppHelper.Models.CertificationModel>
<table class="table table-striped table-bordered" id="tblCertification">
    <thead class="thead-dark">
        <tr>
            <th>Certification Id</th>
            <th>Certification Name</th>
            <th>Certification Image</th>
            <th>Certification Url</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Count > 0)
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.CertificationId</td>
                    <td>@item.CertificationName</td>
                    <td><img id="blah" src="@( item.CertificationImage!=null? Url.Content("~/certification-image/"+item.CertificationImage) : Url.Content("~/images/no_image.gif"))" alt="@item.CertificationName" class="img-thumbnail" style="max-width:50px !important;" /></td>
                    <td>@item.CertificationUrl</td>
                    <td>
                        <a asp-controller="Certification" asp-action="Update" asp-route-id="@item.CertificationId"><i class="fa fa-edit"></i></a>
                        <a href="javascript:void(0);" data-toggle="modal" data-target="#confirmationModel" data-delid="@item.CertificationId" data-targetdiv="divCertificationList" data-delurl="Certification/Delete" data-objectname="Certification"><i class="fa fa-trash-alt"></i></a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5">No record found</td>
            </tr>
        }
    </tbody>
</table>
<script type="text/javascript">
    setDatatable();
</script>